<h1>Thank you for your order, <%= @user.first_name %></h1>
<div>
  <table>
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order_total = 0 %>
      <% @line_items.each do |line_item| %>
        <%= render 'item', product_id: line_item.product_id, quantity: line_item.quantity %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
          <%= @order_total %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>