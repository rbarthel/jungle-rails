<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
  </article>

      <div class="col-sm-12">
        <h4>Reviews:</h4>
        <table class='table'>
          <tr>
            <th>
              <b>User</b>
            </th>
            <th>
              <b>Rating</b>
            </th>
            <th>
              <b>Review</b>
            </th>
            <th>
            </th>
          </tr>
          <%= render(partial: 'products/review', locals: {reviews: @reviews}) %>
        </table>
      </div>

      <% if current_user %>
        <div class="col-sm-12">
          <h4>Write a review:</h4>

          <%= form_for [@product, @review] do |f| %>
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, id: :review_description, placeholder: 'Description of your review (optional)', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :rating %>
              <%= f.select :rating, [['⭐ ⭐ ⭐ ⭐ ⭐', 5], ['⭐ ⭐ ⭐ ⭐', 4], ['⭐ ⭐ ⭐', 3], ['⭐ ⭐', 2], ['⭐', 1]], {}, {class: "form-control"} %>
            </div>
            <div class="form-group">
              <%= f.submit class: 'btn btn-default' %>
            </div>
          <% end %>

        </div>
      <% end %>
</section>
